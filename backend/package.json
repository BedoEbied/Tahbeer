{
  "name": "backend",
  "version": "1.0.0",
  "description": "Tahbeer Courses API - TypeScript Backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/src/server.js",
    "migrate:up": "node -r ts-node/register ./node_modules/.bin/knex --knexfile knexfile.ts migrate:latest",
    "migrate:down": "node -r ts-node/register ./node_modules/.bin/knex --knexfile knexfile.ts migrate:rollback",
    "migrate:create": "node -r ts-node/register ./node_modules/.bin/knex --knexfile knexfile.ts migrate:make --stub migrations/template.ts"
  },
  "keywords": [
    "courses",
    "education",
    "api",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-validator": "^7.3.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
